#include<stdio.h>
#include<unistd.h>
#include<sys/stat.h>
#include<sys/types.h>
#include<fcntl.h>
int main()
{
  int fd;
  char *myfifo="/tmp/myfifo";
  mkfifo(myfifo,0666);
  char buf[1024];
 printf("Run reader process to read the FIFO file\n");
  fd=open(myfifo,O_WRONLY);
 
  write(fd,"Hii",sizeof("Hii"));
  close(fd);
  unlink(myfifo);
  return 0;
  
}
